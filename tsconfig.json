{
    "compilerOptions": {
      "module": "es6",
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "jsx": "react",
      "moduleResolution":"node",
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "build",
    ],
    "ts-node": {
      "transpileOnly": true
    }
  }
  